<UserControl x:Class="Jpp.Ironstone.Core.UI.Views.SurfaceSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Jpp.Ironstone.Core.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <TextBox IsEnabled="False" Text="{Binding SelectedSurfaceName}" Grid.Column="0" MinWidth="150"/>
        <Button Command="{Binding ShowSurfaceSelector}" Content="..." Grid.Column="1" Margin="5,0,5,0"/>
    </Grid>
</UserControl>
